# Greaper Scanner Configuration File
# Copy this file to .env and fill in your API keys and preferences

# ============================================
# API KEYS (for subdomain enumeration)
# ============================================
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here
SECURITYTRAILS_API_KEY=your_securitytrails_api_key_here
SHODAN_API_KEY=your_shodan_api_key_here

# ============================================
# SCANNER SETTINGS
# ============================================
GREAPER_VERSION=v2.0
DEFAULT_TIMEOUT=10
DEFAULT_RATE_LIMIT=10
MAX_THREADS=10

# ============================================
# OUTPUT SETTINGS
# ============================================
COLOR_OUTPUT=true
VERBOSE=false
AUTO_SAVE=false
DEFAULT_OUTPUT_FORMAT=txt

# ============================================
# SCANNING BEHAVIOR
# ============================================
FOLLOW_REDIRECTS=true
VERIFY_SSL=false
MAX_RETRIES=3
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# ============================================
# SUBDOMAIN ENUMERATION
# ============================================
# Enable/disable specific sources (true/false)
USE_VIRUSTOTAL=false
USE_SECURITYTRAILS=false
USE_BUFFEROVER=false
USE_RIDDLER=false
USE_CRTSH=true
USE_ALIENVAULT=true
USE_HACKERTARGET=true
USE_THREATCROWD=true
USE_URLSCAN=true
USE_CERTSPOTTER=true
USE_THREATMINER=true

# ============================================
# NOTIFICATION SETTINGS (Future Use)
# ============================================
ENABLE_NOTIFICATIONS=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK
EMAIL_ALERTS=security@example.com
